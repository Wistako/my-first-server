<h2>Contact me</h2>
{{#if isSent}}
  <div class="isSent">
    Your message has been sent!
    File {{filename}} has been saved.
  </div>
{{/if}}
{{#if isError}}
  <div class="isError">
    You filled in the form incorrectly!
  </div>
{{/if}}
<form action="/contact/send-message" method="POST" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project design: <input type="file" name="file" accept="image/*,.jpg,.jpeg,.gif" >
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>

  {{#if isSent}}
    <div class="file">
      <img src="/uploads/{{file}}" alt="project design">
    </div>
  {{/if}}
</form>